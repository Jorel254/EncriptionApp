<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodel="clr-namespace:EncriptionApp.ViewModel"
               xmlns:fonts="clr-namespace:EncriptionApp.Fonts"
             x:Class="EncriptionApp.View.AESPage"  x:DataType="viewmodel:AESViewModel" Title="Encriptación AES" Shell.BackgroundColor=" #900C3F">
    <ContentPage.BindingContext>
        <viewmodel:AESViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="0">
            <StackLayout Orientation="Horizontal">
                <Button  Text="{x:Static  fonts:FontelloIcon.Folder}" FontFamily="{x:Static fonts:FontelloIcon.Font}" Margin="10" CornerRadius="10" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" TextColor="#900C3F" FontAttributes="Bold" FontSize="40" Command="{Binding PickFileCommand}"/>
                <Button Grid.Column="1"  Text="{x:Static  fonts:FontelloIcon.TrashBin}" FontFamily="{x:Static fonts:FontelloIcon.Font}" Margin="10" CornerRadius="10" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" TextColor="#900C3F" FontAttributes="Bold" FontSize="40" Command="{Binding DelPickerCommand}" />
                <Button BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="EndAndExpand" Text="{x:Static  fonts:FontelloIcon.Info}" FontFamily="{x:Static fonts:FontelloIcon.Font}" FontSize="20" Command="{Binding AlertCommand}"/>
            </StackLayout>
            <StackLayout >
                <StackLayout   Spacing="0">
                    <Frame BorderColor="#000000" CornerRadius="18" BackgroundColor="Transparent">
                        <Editor  Placeholder="Introduce el mensaje" PlaceholderColor="#000000" AutoSize="TextChanges" HeightRequest="100" Text="{Binding Text}"/>
                    </Frame>
                    <Button Margin="10"  TextColor="#900C3F " CornerRadius="10" BackgroundColor="Transparent" BorderColor="#000000" BorderWidth="1" Text="Encriptar"  FontFamily="aAbsoluteEmpire.ttf#CodigoBarras" Command="{Binding EncyptCommand}"/>
                </StackLayout>
                <Label Text="Texto encriptado:" TextColor="#000000" FontSize="18"/>
                <StackLayout   Spacing="0" >
                    <Frame BorderColor="#000000" CornerRadius="18" Grid.Row="0" BackgroundColor="Transparent">
                        <Editor  Placeholder="El texto es" PlaceholderColor="#000000" AutoSize="TextChanges" HeightRequest="150" IsReadOnly="True" Text="{Binding Text2}"/>
                    </Frame>
                    <Button Margin="10" TextColor="#900C3F " CornerRadius="10" BackgroundColor="Transparent" BorderColor="#000000" BorderWidth="1" Text="Desencriptar"  FontFamily="aAbsoluteEmpire.ttf#CodigoBarras" Command="{Binding DecyptCommand}"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>